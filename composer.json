{
    "name": "speardevs/php-standards",
    "type": "library",
    "require-dev": {
        "phpstan/phpstan": "^1.10",
        "rector/rector": "^0.18.0",
        "symplify/easy-coding-standard": "^12.0"
    },
    "autoload": {
        "psr-4": {
            "Speardevs\\PhpStandards\\": "src/"
        }
    },
    "scripts": {
        "install-phpstan-config": [
          "touch phpstan.neon"
        ],
        "post-install-cmd": [
            "@install-phpstan-config"
        ]
    }
}
